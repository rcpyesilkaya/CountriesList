<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:context=".FeedFragment">

        <ImageView
            android:id="@+id/detailImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher_round"/>

        <TextView
            android:id="@+id/detailCountryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Country Name"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detailCountryCapital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Country Capital"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/detailCountryRegion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Country Region" />

        <TextView
            android:id="@+id/detailCountryCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Country Currency" />

        <TextView
            android:id="@+id/detailCountryLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Country Language" />


    </LinearLayout>
</layout>